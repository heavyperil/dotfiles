[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  editor = nvim

[pull]
  rebase = true

[push]
  default = current

[apply]
  whitespace = nowarn

[branch]
  autosetupmerge = true

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true

[merge]
  tool = Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope

[user]
  name = Matt Johnson
  email = matt@heavyperil.com

[filter "lfs"]
  required = true
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[gpg]
  program = /usr/local/bin/gpg
