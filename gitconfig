[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  editor = nvim

[pull]
  rebase = true

[push]
  default = current

[apply]
  whitespace = nowarn

[branch]
  autosetupmerge = true

[mergetool]
  keepBackup = false
  prompt = false

[difftool]
  prompt = false

[include]
  path = ~/.gitconfig.user

[filter "lfs"]
  required = true
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[gpg]
  program = /usr/local/bin/gpg
